<mvc:View
    controllerName="zsapreunit.pages.controller.FloorUnitPlanner"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.uxap"
    xmlns:ui="sap.ui.table"
    xmlns:m="sap.m"
    
    xmlns:plugins="sap.ui.table.plugins"
    height="100%"
>
    <m:Page>
        <m:headerContent>
			<m:Button text="{i18n>Label.SecondTerm}" tooltip="Toggle 2nd Term" visible="{viewData>/showBtn2ndTerm}" press="onToggle2ndTerm" />
		</m:headerContent>
        <ui:Table
            id="planTable"
            rows="{/FloorUnit}"
            ariaLabelledBy="title"
            enableColumnFreeze="true"
            visibleRowCount="12"            
        >
            <ui:plugins>
                <plugins:MultiSelectionPlugin
                    limit="20"
                    enableNotification="true"
                    showHeaderSelector="true"
                    selectionMode="MultiToggle"
                    selectionChange=".onUnitSelChange"
                />
            </ui:plugins>
            <ui:extension>
                <m:OverflowToolbar style="Clear">
                    <m:ToolbarSpacer/>
                    <m:Button
                        icon="sap-icon://close-command-field"
                        textDirection="Inherit"
                        type="Default"
                        press="onGotoFirstColumn"
                    />
                </m:OverflowToolbar>
            </ui:extension>
            <ui:columns>
                <ui:Column width="4rem">
                    <m:Label text="Floor" />
                    <ui:template>
                        <m:Label
                            text="{Floor}"
                            design="{= ${Term1/Main} ? 'Bold': 'Standard'}"                            
                            width="100%"
                        />
                    </ui:template>
                </ui:Column>
                <ui:Column width="4rem">
                    <m:Label text="Unit No" />
                    <ui:template>
                        <m:Label
                            text="{Unitno}"
                            design="{= ${Term1/Main} ? 'Bold': 'Standard'}"
                            textAlign="{= ${Term1/Main} ? 'Begin': 'End'}"
                            width="100%"
                        />
                    </ui:template>
                </ui:Column>
                <ui:Column
                    width="18rem"
                    headerSpan="2"
                    filterProperty="Term1/Company"
                >
                    <ui:multiLabels>
                        <m:Label
                            text="First Term"
                            textAlign="Center"
                            width="100%"
                        />
                        <m:Label
                            text="Company"
                            textAlign="Center"
                            width="100%"
                        />
                    </ui:multiLabels>
                    <ui:template>
                        <m:Label
                            text="{Term1/Company}"
                            design="{= ${Term1/Main} ? 'Bold': 'Standard'}"
                        />
                    </ui:template>
                </ui:Column>
                <ui:Column
                    width="12rem"
                    filterProperty="Term1/Tenant"
                >
                    <ui:multiLabels>
                        <m:Label text="First Term" />
                        <m:Label
                            text="Tenant"
                            textAlign="Center"
                            width="100%"
                        />
                    </ui:multiLabels>
                    <ui:template>
                        <m:Label
                            text="{Term1/Tenant}"
                            design="{= ${Term1/Main} ? 'Bold': 'Standard'}"
                        />
                    </ui:template>
                </ui:Column>
                <ui:Column width="8rem">
                    <ui:multiLabels>
                        <m:Label text="First Term" />
                        <m:Label
                            text="Trade"
                            textAlign="Center"
                            width="100%"
                        />
                    </ui:multiLabels>
                    <ui:template>
                        <m:Label
                            text="{Term1/Trade}"
                            design="{= ${Term1/Main} ? 'Bold': 'Standard'}"
                        />
                    </ui:template>
                </ui:Column>
                <ui:Column
                    hAlign="End"
                    width="6rem"
                >
                    <ui:multiLabels>
                        <m:Label text="First Term" />
                        <m:Label
                            text="Area Size"
                            textAlign="Center"
                            width="100%"
                        />
                    </ui:multiLabels>
                    <ui:template>
                        <m:Label
                            text="{
                                path: 'Term1/Areasize',
                                formatter: '.formatNoDecimals'
                            } {Term1/Uom}"
                            design="{= ${Term1/Main} ? 'Bold': 'Standard'}"
                            visible="{= ${Term1/Main}}"
                        />
                    </ui:template>
                </ui:Column>
                <ui:Column
                    width="5rem"
                    hAlign="Center"
                >
                    <ui:multiLabels>
                        <m:Label text="First Term" />
                        <m:Label
                            text="No Of Years"
                            textAlign="Center"
                            width="100%"
                            wrapping="true"
                        />
                    </ui:multiLabels>
                    <ui:template>
                        <m:Label
                            text="{Term1/Noofyear}"
                            design="{= ${Term1/Main} ? 'Bold': 'Standard'}"
                            visible="{Term1/Main}"
                        />
                    </ui:template>
                </ui:Column>
                <ui:Column
                    hAlign="Center"
                    width="8rem"
                >
                    <ui:multiLabels>
                        <m:Label text="First Term" />
                        <m:Label
                            text="Start Date"
                            textAlign="Center"
                            width="100%"
                        />
                    </ui:multiLabels>
                    <ui:template>
                        <m:Label
                            text="{
                                path: 'Term1/Startdate',
                                formatter: '.formatDateTime'
                            }"
                            design="{= ${Term1/Main} ? 'Bold': 'Standard'}"
                            visible="{Term1/Main}"
                        />
                    </ui:template>
                </ui:Column>
                <ui:Column
                    hAlign="Center"
                    width="8rem"
                >
                    <ui:multiLabels>
                        <m:Label text="First Term" />
                        <m:Label
                            text="End Date"
                            textAlign="Center"
                            width="100%"
                        />
                    </ui:multiLabels>
                    <ui:template>
                        <m:Label
                            text="{
                                path: 'Term1/Enddate',
                                formatter: '.formatDateTime'
                            }"
                            design="{= ${Term1/Main} ? 'Bold': 'Standard'}"
                            visible="{Term1/Main}"
                        />
                    </ui:template>
                </ui:Column>
                <ui:Column
                    hAlign="Center"
                    width="8rem"
                >
                    <ui:multiLabels>
                        <m:Label text="First Term" />
                        <m:Label
                            text="{i18n>Contract.BaseRent.Avg}"
                            textAlign="Center"
                            width="100%"
                        />
                    </ui:multiLabels>
                    <ui:template>
                        <m:Button
                            text="{Term1/Avgbaserent}"
                            press="onShowT1Baserent"
                            visible="{Term1/Main}"
                        />
                    </ui:template>
                </ui:Column>
                <ui:Column
                    hAlign="Center"
                    width="8rem"
                >
                    <ui:multiLabels>
                        <m:Label text="First Term" />
                        <m:Label
                            text="{i18n>Contract.SvcRent}"
                            textAlign="Center"
                            width="100%"
                        />
                    </ui:multiLabels>
                    <ui:template>
                        <m:Label
                            text="{Term1/Svcrent}"
                            design="{= ${Term1/Main} ? 'Bold': 'Standard'}"
                            visible="{Term1/Main}"
                        />
                    </ui:template>
                </ui:Column>
                <ui:Column
                    hAlign="Center"
                    width="8rem"
                >
                    <ui:multiLabels>
                        <m:Label text="First Term" />
                        <m:Label
                            text="{i18n>Contract.AnpRent}"
                            textAlign="Center"
                            width="100%"
                        />
                    </ui:multiLabels>
                    <ui:template>
                        <m:Label
                            text="{Term1/Anprent}"
                            design="{= ${Term1/Main} ? 'Bold': 'Standard'}"
                            visible="{Term1/Main}"
                        />
                    </ui:template>
                </ui:Column>
                <!-- 2nd Term-->
                <ui:Column
                    width="18rem"
                    headerSpan="2"
                    filterProperty="Term2/Company"
                >
                    <ui:multiLabels>
                        <m:Label
                            text="{i18n>Label.SecondTerm}"
                            textAlign="Center"
                            width="100%"
                        />
                        <m:Label
                            text="Company"
                            textAlign="Center"
                            width="100%"
                        />
                    </ui:multiLabels>
                    <ui:template>
                        <m:Input
                            value="{Term2/Company}"
                            autocomplete="false"
                            visible="{Term2/Main}"
                        />
                    </ui:template>
                </ui:Column>
                <ui:Column
                    width="12rem"
                    filterProperty="Term2/Tenant"
                >
                    <ui:multiLabels>
                        <m:Label text="{i18n>Label.SecondTerm}" />
                        <m:Label
                            text="Tenant"
                            textAlign="Center"
                            width="100%"
                        />
                    </ui:multiLabels>
                    <ui:template>
                        <m:Input
                            value="{Term2/Tenant}"
                            autocomplete="false"
                            visible="{Term2/Main}"
                        />
                    </ui:template>
                </ui:Column>
                <ui:Column
                    width="12rem"
                    filterProperty="Term2/Tenant"
                >
                    <ui:multiLabels>
                        <m:Label text="{i18n>Label.SecondTerm}" />
                        <m:Label
                            text="{i18n>Contract.Trade}"
                            textAlign="Center"
                            width="100%"
                        />
                    </ui:multiLabels>
                    <ui:template>
                        <m:Select
                            items=""
                            visible="{Term2/Main}"
                        />
                    </ui:template>
                </ui:Column>
            </ui:columns>
        </ui:Table>
    </m:Page>
</mvc:View>