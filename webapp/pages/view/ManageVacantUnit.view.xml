<mvc:View
	controllerName="zsapreunit.pages.controller.ManageVacantUnit"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:t="sap.ui.table"    
    xmlns:l="sap.ui.layout"
	xmlns:core="sap.ui.core" 
    core:require="{
		Integer: 'sap/ui/model/type/Integer',
		Float: 'sap/ui/model/type/Float'
	 }"
	displayBlock="true"
	height="100%"
	busyIndicatorDelay="0"
    
>

<l:VerticalLayout class="sapUiContentPadding">
		
		<t:Table id="vacantunitable" rows="{ path:'form>/VacantUnitSet' , sorter: { path: 'Guid'} }" 
			selectionMode="MultiToggle" visibleRowCount="7" paste="onPaste" ariaLabelledBy="title"
			rowSelectionChange="onTableSelectionChanged"
			>
			<t:extension>
				<OverflowToolbar style="Clear">
					<Title id="title" text="{i18n>Label.VacantUnit}"/>
					<ToolbarSpacer/>
					<Button
						icon="sap-icon://save"
						textDirection="Inherit"
						type="Default"
						press="onSaveUnits"
						visible="{viewData>/showSave}"
					/>
					<Button
						icon="sap-icon://delete"
						textDirection="Inherit"
						type="Default"
						press="onDeleteUnits"
						visible="{viewData>/showDelete}"
					/>
					<Button
						icon="sap-icon://add"
						textDirection="Inherit"
						type="Default"
						press="onAddUnit"
					/>
				</OverflowToolbar>
			</t:extension>
			<t:columns>
				<t:Column width="10rem" filterProperty="Guid">
					<Label text="{i18n>ID}"/>
					<t:template>
						<Label text="{form>Guid}" wrapping="false"/>
					</t:template>
				</t:Column>
				<t:Column width="10rem" filterProperty="Floor">
					<Label text="{i18n>Label.Floor}"/>
					<t:template>
						<Input value="{ path: 'form>Floor'}" change=".onUnitnochanged" editable="{form>Editable}" maxLength="2" valueState="{form>State/Floor}"/>
					</t:template>
				</t:Column>
				<t:Column width="10rem" filterProperty="Unitno">
					<Label text="{i18n>Label.UnitNo}"/>
					<t:template>
						<Input value="{form>Unitno}" change=".onUnitnochanged"  editable="{form>Editable}"  maxLength="4" valueState="{form>State/Unitno}"/>
					</t:template>
				</t:Column>
				<t:Column width="10rem" filterProperty="Areasize">
					<Label text="{i18n>Label.AreaSize}"/>
					<t:template>
						<Input value="{ path: 'form>Areasize', type: 'Float'}" description="{form>Uom}"  textAlign="End"  editable="{form>Editable}" valueState="{form>State/Areasize}"/>
					</t:template>
				</t:Column>
			</t:columns>
		</t:Table>
	</l:VerticalLayout>
</mvc:View>