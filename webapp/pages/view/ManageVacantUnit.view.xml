<mvc:View
	controllerName="zsapreunit.pages.controller.ManageVacantUnit"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:t="sap.ui.table"
    xmlns:f="sap.ui.layout.form"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core"
	displayBlock="true"
	height="100%"
	busyIndicatorDelay="0"
    
>

<l:VerticalLayout class="sapUiContentPadding">
		<f:Form id="vacantForm" editable="true">
			<f:toolbar>
				<Toolbar>
					<Button icon="sap-icon://nav-back" press=".onNavBack"/>
					<Title text="{i18n>Label.VacantUnit}"/>
					<ToolbarSpacer/>
					   <Button
	                    icon="sap-icon://alert"
	                    text="{= ${message>/}.length }"
	                    visible="{= ${message>/}.length > 0 }"
	                    type="Emphasized"
	                    press="onMessagePopoverPress" />
					<Button icon="sap-icon://add-document" press="onNew"/>
					<Button icon="sap-icon://save" press="onSave"/>
				</Toolbar>
			</f:toolbar>
			<f:layout>
				<f:ColumnLayout columnsM="2" columnsL="3" columnsXL="4"/>
			</f:layout>
			<f:formContainers>
				<f:FormContainer>
					<f:formElements>
						<f:FormElement label="{i18n>Label.Floor} - {i18n>Label.UnitNo} / {i18n>Label.AreaSize}">
							<f:fields>
								<Text text="#" textAlign="End">
									<layoutData>
										<f:ColumnElementData cellsSmall="1" cellsLarge="1" />
									</layoutData>
								</Text>
                                <!-- <Input value="{ path: 'form>/Floor' }">
									<layoutData>
										<f:ColumnElementData cellsSmall="3" cellsLarge="1" />
									</layoutData>
								</Input> -->

                                <ComboBox
                                    items="{
                                        path: 'form>/Floor',
                                        sorter: { path: 'ID' }                                        
                                    }">
                                    <core:Item key="{ID}" text="{text}" />

                                    <layoutData>
										<f:ColumnElementData cellsSmall="3" cellsLarge="1" />
									</layoutData>
                                </ComboBox>
								<Text text="-" textAlign="Center">
									<layoutData>
										<f:ColumnElementData cellsSmall="1" cellsLarge="1" />
									</layoutData>
								</Text>
								<Input value="{ path: 'form>/UnitNo' }" visible="true">
							        <layoutData>
										<f:ColumnElementData cellsSmall="2" cellsLarge="1" />
									</layoutData>
                                </Input>

                                <Text text="/" textAlign="Center">
									<layoutData>
										<f:ColumnElementData cellsSmall="1" cellsLarge="1" />
									</layoutData>
								</Text>

                                <Input value="{ path: 'form>/AreaSize', type: 'sap.ui.model.odata.type.Single' }" visible="true" description="SF">
							        <layoutData>
										<f:ColumnElementData cellsSmall="4" cellsLarge="1" />
									</layoutData>
                                </Input>
							</f:fields>
						</f:FormElement>
					</f:formElements>
				</f:FormContainer>
			</f:formContainers>
		</f:Form>
		<t:Table id="loctbl" rows="{ path:'/LocationSet', filters : [{ path : 'Werks', operator : 'EQ', value1 : ''}]}" selectionMode="MultiToggle" visibleRowCount="7" paste="onPaste" ariaLabelledBy="title">
			<t:extension>
				<OverflowToolbar style="Clear">
					<Title id="title" text="{i18n>Location}"/>
				</OverflowToolbar>
			</t:extension>
			<t:columns>
				<t:Column width="10rem" filterProperty="LocationID">
					<Label text="{i18n>ID}"/>
					<t:template>
						<Text text="{LocationID}" wrapping="false"/>
					</t:template>
				</t:Column>
				<t:Column width="20rem" filterProperty="Text">
					<Label text="{i18n>Text}"/>
					<t:template>
						<Text text="{Text}" wrapping="false"/>
					</t:template>
				</t:Column>
			</t:columns>
		</t:Table>
	</l:VerticalLayout>
</mvc:View>