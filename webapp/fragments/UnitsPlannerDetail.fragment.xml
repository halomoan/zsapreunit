<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:f="sap.f"
	xmlns:l="sap.ui.layout"
	xmlns:lf="sap.ui.layout.form"
	xmlns:core="sap.ui.core"
	xmlns:suite="sap.suite.ui.commons"
>
	<f:DynamicPage id="dynamicPageId">
		<f:title>
			<f:DynamicPageTitle id="_IDGenDynamicPageTitle1">
				<f:heading>
					<Title
						id="_IDGenTitle1"
						text="{selectedCustomer>/Tenant}"
						wrapping="true"
						class="sapUiSmallMarginEnd"
						titleStyle="H1"
					/>
				</f:heading>
				<f:expandedContent>					
					 <GenericTag
                            text="{selectedCustomer>/Unitno}"
                            design="StatusIconHidden"
                            status="Information"
                            class=""
                            press="onListItemPress"
                        >
                            <ObjectNumber
                                emphasized="false"
                                number="{selectedCustomer>/Noofunit}"
                                unit="Unit(s)"
                            />
                        </GenericTag>
				</f:expandedContent>
				<f:snappedContent>
					<GenericTag
                            text="{selectedCustomer>/Unitno}"
                            design="StatusIconHidden"
                            status="Information"
                            class=""
                            press="onListItemPress"
                        >
                            <ObjectNumber
                                emphasized="false"
                                number="{selectedCustomer>/Noofunit}"
                                unit="Unit(s)"
                            />
                        </GenericTag>
				</f:snappedContent>
				<f:navigationActions>
					<OverflowToolbarButton
						id="midClose"
						type="Transparent"
						icon="sap-icon://decline"
						press="onMidClose"
						tooltip="Close middle column"
					/>
				</f:navigationActions>
				<f:actions>
					<Button
						id="_IDGenButton2"
						text="Edit"
						type="Emphasized"
					/>
					<Button
						id="_IDGenButton3"
						text="Copy"
						type="Transparent"
					/>
					<Button
						id="_IDGenButton4"
						icon="sap-icon://action"
						type="Transparent"
					/>
				</f:actions>
			</f:DynamicPageTitle>
		</f:title>
		<f:header>
			<f:DynamicPageHeader id="_IDGenDynamicPageHeader1">
				<FlexBox
					id="_IDGenFlexBox3"
					wrap="Wrap"
					fitContainer="true"
					alignItems="Stretch"
				>
					<Avatar
						id="_IDGenAvatar2"
						src="../../../../../../../{products>/selectedProduct/ProductPicUrl}"
						displaySize="L"
						displayShape="Square"
						class="sapUiTinyMarginEnd"
					/>
					<l:HorizontalLayout allowWrapping="true">
						<l:VerticalLayout class="sapUiMediumMarginEnd">
							<ObjectStatus
								title="{i18n>Company}"
								text="{selectedCustomer>/Company}"
							/>
							<ObjectStatus
								title="{i18n>Business Partner No}"
								text="{selectedCustomer>/Bupano}"
							/>	
							
							<ObjectStatus
								title="Trade"
								text="{selectedCustomer>/Trade}"
								state="Success"
							/>
						</l:VerticalLayout>
						<l:VerticalLayout>
							<ObjectAttribute title="Occupancy"/>
							<HBox>		
							<ObjectStatus
								title="{i18n>From}"
								text="{path: 'selectedCustomer>/Startdate', formatter: '.formatDateTime'}"
								class="sapUiTinyMarginEnd"
							/>			
							<ObjectStatus
								
								title="{i18n>Until}"
								text="{path: 'selectedCustomer>/Lastdate', formatter: '.formatDateTime'}"
							/>			
							</HBox>
						</l:VerticalLayout>
					</l:HorizontalLayout>
				</FlexBox>
			</f:DynamicPageHeader>
		</f:header>
		<f:content>
			<suite:Timeline
				id="idTimeline"
				enableDoubleSided="false"
				axisOrientation="Horizontal"
				groupBy="Startdate"
				groupByType="Year"
				growingThreshold="0"
				filterTitle="Contract No"
				sortOldestFirst="true"
				content="{/REConditionSet}"
				enableScroll="true"
			>
				<suite:content>
					<suite:TimelineItem
						id="idTemplateItem"
						dateTime="{
							path: 'Startdate',
							formatter: '.formatDateTime'
						}"
						title="Group: {Contridx}"
						userNameClickable="true"
						userNameClicked="onUserNameClick"
						select="onTimelinePress"
						userPicture="{Photo}"
						text="{Text}"
						userName="Start Date"
						filterValue="{Contractno}"																						
					>
						<suite:embeddedControl>
							
							<VBox>
							<Title text="Contract No: {Contractno}" class="sapUiSmallMarginBottom"/>
							<HBox alignItems="Start" width="100%">
							
							<VBox  width="50%" >
								
								<Label text="End Date" design="Bold"/>
								<Text text="{
											path: 'Enddate',
											formatter: '.formatDateTime'
								}"/>
								<Label text="Unit Size"  design="Bold"/>
								<Text text="{path: 'Areasize', formatter: '.formatNoDecimals' } {Uom}"/>
							</VBox>

							<VBox width="50%" >
								<Label text="Base Rent $"  design="Bold"/>
								<Text text="{Baserent}"/>
								<Label text="Svc Rent $"  design="Bold"/>
								<Text text="{Svcrent}"/>
								<Label text="A&amp;P Rent $"  design="Bold"/>
								<Text text="{Anprent}"/>
							</VBox>
							</HBox>
							</VBox>
						</suite:embeddedControl>
					</suite:TimelineItem>
				</suite:content>
			</suite:Timeline>
		</f:content>
	</f:DynamicPage>
</core:FragmentDefinition>