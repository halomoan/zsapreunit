<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
>
	<Page title="{i18n>CashFlow}">
		<headerContent>
			<Button
				icon="sap-icon://decline"
				tooltip="Close"
				press="onEndClose"
			/>
		</headerContent>
		<Table
			id="idCFEndTable"
			inset="false"
			items="{
				path: '/ZSCFMthlySet',
				sorter: {
					path: 'Startdate'
				}
			}"
			sticky="ColumnHeaders"
		>
			<!-- <headerToolbar>
				<OverflowToolbar>
					<content>
						<Title
							text="{i18n>Monthly}"
							level="H2"
						/>
						<ToolbarSpacer />
					</content>
				</OverflowToolbar>
			</headerToolbar>
			<infoToolbar>
				<OverflowToolbar>
					<Label text="Wide range of available products"/>
				</OverflowToolbar>
			</infoToolbar> -->
			
			<columns>
				<Column width="12em">
					<Text text="Month/Year"/>
				</Column>
				<Column
					hAlign="End"
					demandPopin="true"
					minScreenWidth="Tablet"
				>
					<Text text="{i18n>CashFlow.BaseRent}"/>
				</Column>
				<Column
					hAlign="End"
					demandPopin="true"
					minScreenWidth="Tablet"
				>
					<Text text="{i18n>CashFlow.SvcRent}"/>
				</Column>
				<Column
					hAlign="End"
					demandPopin="true"
					minScreenWidth="Tablet"
				>
					<Text text="{i18n>CashFlow.AnpRent}"/>
				</Column>
				<Column hAlign="End">
					<Text text="{i18n>CashFlow.TotalRent}"/>
				</Column>
			</columns>
			<items>
				<ColumnListItem vAlign="Middle">
					<cells>
						<ObjectIdentifier
							title="{parts: [{path: 'Startdate'}, {path: 'viewData>/MMM-YYYY'}], formatter: '.formatDateTime'}"							
						/>
						<ObjectNumber
							number="{
								parts: [{
									path: 'Baserent'
								}, {
									path: 'Currency'
								}],
								type: 'sap.ui.model.type.Currency',
								formatOptions: {
									showMeasure: false
								}
							}"
							unit="{Currency}"
							state="Information"
						/>
						<ObjectNumber
							number="{
								parts: [{
									path: 'Svcrent'
								}, {
									path: 'Currency'
								}],
								type: 'sap.ui.model.type.Currency',
								formatOptions: {
									showMeasure: false
								}
							}"
							unit="{Currency}"
							state="Warning"
						/>
						<ObjectNumber
							number="{
								parts: [{
									path: 'Anprent'
								}, {
									path: 'Currency'
								}],
								type: 'sap.ui.model.type.Currency',
								formatOptions: {
									showMeasure: false
								}
							}"
							unit="{Currency}"
							state="Warning"
						/>
						<ObjectNumber
							number="{
								parts: [{
									path: 'Trent'
								}, {
									path: 'Currency'
								}],
								type: 'sap.ui.model.type.Currency',
								formatOptions: {
									showMeasure: false
								}
							}"
							unit="{Currency}"
							state="Success"
						/>
					</cells>
				</ColumnListItem>
			</items>
		</Table>
		<footer>
			<OverflowToolbar>
				<ToolbarSpacer/>
				<Button
					text="Order"
					enabled="{
						path: 'Order>/',
						formatter: 'sap.m.sample.TableBreadcrumb.Formatter.isAnyProductSelected'
					}"
					press="handleOrderPress" />
			</OverflowToolbar>
		</footer>
	</Page>
</core:FragmentDefinition>